@model YCWeb.Data.Room

@{
    Layout = null;
}
<div class="container">
    @Html.Hidden("Header_Text", Model.RoomName, new { @id = "Header_Text" })
    <div class="row details">
        <div class="col-md-12">
            <div class="form-group">
                <label class="font-weight-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </label>
                <div>
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
        </div>
    </div>
    <div class="row details">
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    @Html.DisplayNameFor(model => model.MaxAdults)
                </label>
                <div>
                    @Html.DisplayFor(model => model.MaxAdults)
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    @Html.DisplayNameFor(model => model.MaxChildren)
                </label>
                <div>
                    @Html.DisplayFor(model => model.MaxChildren)
                </div>
            </div>
        </div>
    </div>
    <div class="row details">
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Room Type
                </label>
                <div>
                    @Html.DisplayFor(model => model.RoomType.RoomTypeName)
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Room Option Type
                </label>
                <div>
                    @Html.DisplayFor(model => model.RoomTypeOption.Description)
                </div>
            </div>
        </div>
    </div>
    <div class="row details">
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Created by
                </label>
                <div>
                    @Html.DisplayFor(model => model.User.FirstName)
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Updated Date
                </label>
                <div>
                    @Html.DisplayFor(model => model.CreatedDate)
                </div>
            </div>
        </div>
    </div>
    <div class="row details">
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Updated by
                </label>
                <div>
                    @Html.DisplayFor(model => model.User1.FirstName)
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Updated Date
                </label>
                <div>
                    @Html.DisplayFor(model => model.UpdatedDate)
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a href="#" onclick="EditRooms(@Model.RoomID)">Edit</a> |
    <button onclick="OpenRooms();" class="BackList">Back to List</button>
</div>