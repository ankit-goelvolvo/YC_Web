@model IEnumerable<YCWeb.Data.Room>

@{
    Layout = null;
}

<p>
    <button onclick="CreateRooms();" class="btn btn-success">Create</button>
</p>
<div class="tbl-header">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Room Name
                </th>
                <th>
                    Description
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
<div class="tbl-content">
    <table>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoomName) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <a href="#" onclick="DetailRooms(@item.RoomID)">Details</a> |
                        <a href="#" onclick="EditRooms(@item.RoomID)">Edit</a> |
                        <a href="#" onclick="DeleteRooms(@item.RoomID)">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(window).on("load resize ", function () {
        var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
        $('.tbl-header').css({ 'padding-right': scrollWidth });
    }).resize();
</script>