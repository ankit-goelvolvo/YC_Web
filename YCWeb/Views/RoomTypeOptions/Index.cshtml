@model IEnumerable<YCWeb.Models.Facilitiy>

@{
    Layout = null;
}
<p>
    <button onclick="CreateRoomTypeOption();" class="btn btn-success">Create</button>
</p>
<div class="tbl-header">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Room Type
                </th>
                <th>
                    Facilities
                </th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>
<div class="tbl-content">
    <table>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomtypeName) - @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FacilityName)
                </td>
                <td>
                    <a href="#" onclick="DetailRoomTypeOptions(@item.RoomTypeOptionID)">Details</a> |
                    <a href="#" onclick="EditRoomTypeOption(@item.RoomTypeOptionID)">Edit</a> |
                    <a href="#" onclick="DeleteRoomTypeOption(@item.RoomTypeOptionID)">Delete</a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
<script type="text/javascript">
    $(window).on("load resize ", function () {
        var scrollWidth = $('.tbl-content').width() - $('.tbl-content table').width();
        $('.tbl-header').css({ 'padding-right': scrollWidth });
    }).resize();
</script>
