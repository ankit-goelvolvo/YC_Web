@model YCWeb.Data.Policy

@{
    Layout = null;
}
<div class="container">
    @Html.Hidden("Header_Text", Model.PolicyName, new { @id = "Header_Text" })
    <div class="row details">
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    @Html.DisplayNameFor(model => model.Description)
                </label>
                <div>
                    @Html.DisplayFor(model => model.Description)
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Office Name
                </label>
                <div>
                    @Html.DisplayFor(model => model.Office.OfficeName)
                </div>
            </div>
        </div>
    </div>
    <div class="row details">
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Created By
                </label>
                <div>
                    @Html.DisplayFor(model => model.User.FirstName)
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Created Date
                </label>
                <div>
                    @Html.DisplayFor(model => model.CreatedDate)
                </div>
            </div>
        </div>
    </div>
    <div class="row details">
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Updated by
                </label>
                <div>
                    @Html.DisplayFor(model => model.User1.FirstName)
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label class="font-weight-bold">
                    Updated Date
                </label>
                <div>
                    @Html.DisplayFor(model => model.UpdatedDate)
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a href="#" onclick="EditRoomTypeOption(@Model.PolicyID)">Edit</a> |
    <button onclick="OpenPolicies();" class="BackList">Back to List</button>
</div>
