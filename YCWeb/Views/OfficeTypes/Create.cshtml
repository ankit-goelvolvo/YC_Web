@model YCWeb.Data.OfficeType

@{
    Layout = null;
}


@using (Html.BeginForm(null, null, FormMethod.Get, new { id = "formSaveOfficeType" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="form-group">
            <span class="control-label col-md-10 required">Office Type Name</span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.OfficeTypeName, new { htmlAttributes = new { @class = "form-control", id = "txtOfficeTypeName" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-10 required" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", id = "txtdescription" } })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Create" class="btn btn-success" onclick="saveOfficeType();" />
            </div>
        </div>
    </div>
}

<div>
    <button onclick="OpenOfficeType();" class="BackList">Back to List</button>
</div>